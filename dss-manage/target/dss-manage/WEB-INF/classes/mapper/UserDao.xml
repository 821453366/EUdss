<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eu.dss.dao.UserDao">
    <!--所有用户信息-->
    <select id="findUser" parameterType="PageBean"  resultType="User">
        SELECT * FROM dssuser where rank=#{rank} order by id desc limit #{index},#{pageCount}
    </select>
    <!--所有用户信息-->
    <select id="getTotalCount"  parameterType="PageBean"   resultType="int">
        SELECT count(*) FROM dssuser WHERE rank=#{rank}
    </select>

    <select id="insertUser"  parameterType="User">
      INSERT INTO dssuser(nickname,username,password,rank,rankValue,date)
      VALUES (#{nickname},#{username},#{password},#{rank},#{rankValue},#{date})
    </select>

</mapper>