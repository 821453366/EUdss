<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eu.dss.dao.TronClassDao">

    <!--分页-->
    <!--总记录数-->
    <select id="getTotalCount" resultType="int">
        SELECT count(*) FROM eu_tronclass
    </select>
    <!--分页查询数据-->
    <select id="getAll" parameterType="pageBean" resultType="tronClassBean">
        select * from eu_tronclass limit #{index},#{pageCount}
    </select>


    <!--根据主键查询更新时获取信息-->
    <select id="findByid" parameterType="int" resultType="tronClassBean">
      SELECT * FROM eu_tronclass where id=#{value}
    </select>
<!--添加-->
    <select id="save" resultType="tronClassBean">
      INSERT INTO eu_tronclass (year,tron_month,eu_rj,eu_xin,eu_rw,eu_ts,eu_xiu,eu_gz,eu_kuai,eu_ad,eu_wc,eu_wu,eu_jr)
      VALUES(#{year},#{tron_month},#{eu_rj},#{eu_xin},#{eu_rw},#{eu_ts},#{eu_xiu},#{eu_gz},#{eu_kuai},#{eu_ad},#{eu_wc},#{eu_wu},#{eu_jr});
    </select>
<!--更新-->
    <select id="update" resultType="tronClassBean">
        UPDATE eu_tronclass SET year = #{year},tron_month =#{tron_month},eu_rj =#{eu_rj}," +
                        "eu_xin =#{eu_xin},eu_rw=#{eu_rw},eu_ts=#{eu_ts},eu_xiu=#{eu_xiu},eu_gz=#{eu_gz},eu_kuai=#{eu_kuai}," +
                        "eu_ad=#{eu_ad},eu_wc=#{eu_wc},eu_wu=#{eu_wu},eu_jr=#{eu_jr} where id=#{id}
    </select>
<!--删除-->
    <select id="delete" parameterType="int">
      delete from eu_tronclass where id =#{value}
    </select>




</mapper>